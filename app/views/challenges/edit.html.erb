<h1> Edit a Challenge </h1>

<%= form_tag "/challenges/#{@challenge.id}", method: :patch do %>

<div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, @challenge.name %>
</div>

<div class="form-group">
  <%= label_tag :start_date %>
  <%= text_field_tag :start_date, @challenge.start_date, "data-provide" => 'datepicker', class: 'datepicker' %>
</div>

<div class="form-group">
  <%= select_tag :category, options_from_collection_for_select(Category.all, 'id', 'name'), multiple: true %>
</div>

<div class="form-group">
  <%= label_tag :description %>
  <%= text_field_tag :description, @challenge.description %>
</div>

<div class="form-group">
  <%= label_tag :image %>
  <%= text_field_tag :url, @challenge.url %>
</div>

<%= submit_tag 'Update' %>
<%end%>