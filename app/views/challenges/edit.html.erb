
<%= form_tag "/challenges/#{@challenge.id}", method: :patch do %>
<div class="form-group">
<%= label_tag :name %>
<%= text_field_tag :name, @challenge.name %>
</div>
<div class="form-group">
<%= label_tag :start_date %>
<%= text_field_tag :start_date, @challenge.start_date, class: "datepicker" %>
</div>
<%=form_tag '/challenges', method: :get, class: "navbar-form navbar-left" do %>
        <div class="form-group">
          <%= select_tag :category, options_from_collection_for_select(Category.all, 'id', 'name'), multiple: true %>
          
        </div>
         
      <%end%>

<div class="form-group">
<%= label_tag :description %>
<%= text_field_tag :description, @challenge.description %>
</div>
<%= submit_tag 'Update' %>
<%end%>

<h5><a href="/challenges/<%= @challenge.id %>/edit">Edit</a></h5>