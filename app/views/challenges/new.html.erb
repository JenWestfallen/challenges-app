<% @challenge.errors.full_messages.each do |error| %>
  <h2><%= error %></h2>
  <%end%>

<h1 id="new-challenge-form"> Create a New Challenge </h1>

<%= form_tag '/challenges', method: :post do %>
<div class="form-group">
<%= label_tag :name %>
<%= text_field_tag :name, @challenge.name %>
</div>
<div class="form-group">
<%= label_tag :start_date %>
<%= text_field_tag :start_date, @challenge.start_date, "data-provide" => 'datepicker' %>
</div>

    <div class="form-group">
      <%= select_tag :category, options_from_collection_for_select(Category.all, 'id', 'name'), multiple: true %>    
    </div>     

<div class="form-group">
<%= label_tag :description %>
<%= text_field_tag :description, @challenge.description %>
</div>
<%= submit_tag 'Submit My Challenge' %>
<%end%>