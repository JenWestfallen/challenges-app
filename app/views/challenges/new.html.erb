<h1> Create a New Challenge </h1>

<%= form_tag '/challenges', method: :post do %>
<div class="form-group">
<%= label_tag :name %>
<%= text_field_tag :name, @challenge.name %>
</div>
<div class="form-group">
<%= label_tag :start_date %>
<%= text_field_tag :start_date, @challenge.start_date %>
</div>
<div class="form-group">
<%= label_tag :category %>
<%= text_field_tag :category, @challenge.category %>
</div>
<div class="form-group">
<%= label_tag :description %>
<%= text_field_tag :description, @challenge.description %>
</div>
<%= submit_tag 'Submit My Challenge' %>
<%end%>