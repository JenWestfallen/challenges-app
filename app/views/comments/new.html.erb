<% @comment.errors.full_messages.each do |error| %>
  <h2><%= error %></h2>
  <%end%>

<h1> Add a Comment </h1>

<%= form_tag '/comments', method: :post do %>
<div class="form-group">
<%= label_tag :message %>
<%= text_field_tag :message, @comment.message %>
</div>

<%= submit_tag 'Submit My Comment' %>
<%end%>
