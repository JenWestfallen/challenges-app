<h1> <%= current_user.email %>'s Saved Challenges </h1>

  <% @saved_challenges.each do |saved_challenge| %>
    <h3><%=saved_challenge.challenge.name %> </h3>
    <h3><%=saved_challenge.challenge.description %> </h3>
    <h3><%=saved_challenge.challenge.start_date %> </h3>

    <%= link_to 'Remove', "/possible_participations/#{saved_challenge.id}", method: :delete %>
  <%end%>

    <%= link_to 'Accept This Challenge', '/challenges', method: :post, class: "btn btn-default" %>

