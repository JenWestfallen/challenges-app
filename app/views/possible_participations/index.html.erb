<section id="portfolio">
<div class="col-md-4">
<div class="container">
  <div class="starter-template">
    <h1>Portfolio</h1>
    <div class="smallsep">
    </div>

<h2 id="saved-challenges-list"> <%= current_user.email %>'s saved challenges </h2>

  <% @saved_challenges.each do |saved_challenge| %>
    <h3><%=saved_challenge.challenge.name %> </h3>
    <h3><%=saved_challenge.challenge.description %> </h3>
    <h3><%=saved_challenge.challenge.start_date %> </h3>
    <IMG class="displayed" src="<%= saved_challenge.challenge.url %>" align = "middle" width = "300">
    <%= link_to 'Accept This Challenge', '/participations', method: :post, class: "btn btn-default" %>
    <%= link_to 'Remove', "/possible_participations/#{saved_challenge.id}", method: :delete %>
  <%end%>



  </div>
  </div>
  </div>
  </section>

